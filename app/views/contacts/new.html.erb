<div align="center">
  <h1>Drop us a line!</h1>
<br>
  <form>
    <%= simple_form_for @contact, :html => {:class => 'form-horizontal'} do |f| %>
      <div class="form-group">
        <label class="col-sm-2 control-label">Name:</label>

        <div class="col-sm-10">
          <%= f.input :name, label: false, :required => true, :class => "form-control", :placeholder => "ex. John Doe" %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">Email:</label>

        <div class="col-sm-10">
          <%= f.input :email, label: false, :required => true, :class => "form-control", :placeholder => "jdoe@example.com" %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">Message:</label>

        <div class="col-sm-10">
          <%= f.input :message, :as => :text, label: false, :required => true, :class => "form-control", :placeholder => "Your message here..." %>
        </div>
      </div>
      <div class="hidden">
        <%= f.input :nickname, :hint => 'Leave this field blank!' %>
      </div>
      <div class="col-sm-2">
      </div>
      <div class="col-sm-10">
        </br>
        <%= f.button :submit, 'Send message', :class => "btn btn-primary btn-block" %>
      </div>
    <% end %>
  </form>
</div>


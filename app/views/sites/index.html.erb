<%= render 'highcharts_index' %>

<div id="URLs" align="center"></div>

<hr>

<div class="page-header">
  <%= link_to new_site_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Site
  <% end %>
  <h1>Your Sites</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th>Name</th>
      <th>URL</th>
      <th>Mobile Speed</th>
      <th>More</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
    </thead>

    <tbody>
    <%= content_tag_for(:tr, @sites) do |site| %>
      <td><%= site.name %></td>
      <td><%= site.url %></td>
      <td><% site.webstats.each_with_index do |stat| %><%= stat.mobile_score.to_s %><% end %></td>
      <td><%= link_to '', site, class: 'btn btn-primary glyphicon glyphicon-search' %></td>
      <td><%= link_to '', edit_site_path(site), class: 'btn btn-primary glyphicon glyphicon-pencil' %></td>
      <td><%= link_to '', site, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-primary glyphicon glyphicon-trash' %></td>
    <% end %>

    </tbody>
  </table>

  <!-- DropUp Signup Menu -->
  <div class="btn-group dropup">
    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      Download Stats <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
      <li><%= link_to "CSV", sites_path(format: "csv") %></li>
      <li role="separator" class="divider"></li>
      <li><%= link_to "Excel", sites_path(format: "xls") %></li>
    </ul>
  </div>
</div>
